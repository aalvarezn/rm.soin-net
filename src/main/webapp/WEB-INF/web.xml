<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.1"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
	<display-name>sgrm</display-name>

    <resource-ref>
		<description>Connection SGRM</description>
		<res-ref-name>jdbc/sgrm</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<resource-ref>
		<description>Connection SGRM</description>
		<res-ref-name>jdbc/sgrm_qa</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<resource-ref>
		<description>Connection SGRM</description>
		<res-ref-name>jdbc/sgrm_desa</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<session-config>
		<session-timeout>480</session-timeout> <!-- in minutes -->
	</session-config>
	<error-page>
		<!-- Missing resource -->
		<error-code>404</error-code>
		<location>/WEB-INF/views/plantilla/404.jsp</location>
	</error-page>
	<error-page>
		<!-- Missing resource -->
		<error-code>403</error-code>
		<location>/WEB-INF/views/plantilla/403.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>500</error-code>
		<location>/500</location>
	</error-page>

	<env-entry>
		<description>Ruta local archivos</description>
		<env-entry-name>FileStore</env-entry-name>
		<env-entry-type>java.lang.String</env-entry-type>
		<env-entry-value>E:/SGRM/archivos/</env-entry-value>
		<!-- <env-entry-value>/home/administrator/Desktop/files/</env-entry-value> -->
	</env-entry>

</web-app>
